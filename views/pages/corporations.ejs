<%- include("../partials/_header") -%>

<h3><%= __("CORPO.CORPORATIONS_RANKING") %></h3>

<div class="table-responsive-sm">
    <table class="table table-hover playertable">
        <thead>
            <tr>
                <th class="col-6"><%= __("CORPO.NAME") %></th>
                <th class="col-2 text-center"><%= __("CORPO.SUCCESS") %></th>
                <th class="col-2 text-center"><%= __("CORPO.PLAYED") %></th>
                <th class="col-2 text-center"><%= __("CORPO.AVERAGE_SCORE") %></th>
            </tr>
        </thead>
        <tbody>
            <% for (const corpo of corporationsStats) { %>
                <tr class="align-middle">
                    <td>
                        <img src="/images/<%= corpo.game %>.png" alt="<%= corpo.game %>" class="me-2">
                        <%= corpo.name %>
                    </td>
                    <td class="text-center">
                        <%= corpo.winPercentage %>
                    </td>
                    <td class="text-center">
                        <%= corpo.playCount %>
                    </td>
                    <td class="text-center">
                        <% if (corpo.variationAverage> 0) { %>
                            <i class="bi bi-caret-up-fill elo-up"></i>
                            <span class="elo-up">
                                <%= "+" + corpo.variationAverage %>
                            </span>
                            <% } else { %>
                                <i class="bi bi-caret-down-fill elo-down"></i>
                                <span class="elo-down">
                                    <%= corpo.variationAverage %>
                                </span>
                                <% } %>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>

<%- include("../partials/_footer") -%>